<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <title>Smith's Swimming School</title>
</head>
<body>

    @if (this.User.Identity.IsAuthenticated)
    {
        <div>Hello, @this.User.Identity.Name</div>
        <form method="post" asp-controller="Account" asp-action="Logout">
            <input type="submit" value="Logout" />
        </form>
    }

    @RenderBody()


<img src="~/Image/3S_image.png" alt="Logo" height="300" width="920" data-atf="1" data-frt="0">

</body>
</html>

