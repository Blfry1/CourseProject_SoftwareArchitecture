@model CourseProject_SoftwareArchitecture.Models.Swimmer
    <p class="text-info lead">Fill out all fields</p>
    <h2>Add Your Profile</h2>
    <form asp-action="AddProfile" class="form-horizontal">

        <input asp-for="@Model.UserId" type="hidden" />
        <!-- Removing SwimmerID, this will be assigned and called by UserID
        <label asp-for="SwimmerId"></label>
        <input asp-for="SwimmerId" />
        <br />
    -->
        <fieldset class="form-group">
            <label asp-for="SwimmerName" class="control-label col-xs-2"></label>
            <div class="col-xs-10">
                <input asp-for="SwimmerName" class="form-control" />
            </div>
        </fieldset>
        <br />
        <fieldset class="form-group">
            <label asp-for="DateofBirth" class="control-label col-xs-2"></label>
            <div class="col-xs-10">
                <input asp-for="DateofBirth" class="form-control" />
            </div>
        </fieldset>
        <br />
        <fieldset class="form-group">
            <label asp-for="Gender" class="control-label col-xs-2"></label>
            <div class="col-xs-10">
                <input asp-for="Gender" class="form-control" />
            </div>
        </fieldset>
        <br />
        <fieldset class="form-group">
            <label asp-for="Phone" class="control-label col-xs-2"></label>
            <div class="col-xs-10">
                <input asp-for="Phone" class="form-control" />
            </div>
        </fieldset>
            <br />
            <button class="btn btn-primary" type="submit">Add Profile</button> 
    </form>
    <p><a asp-action="Index">Back to Swimmer Home</a></p>
